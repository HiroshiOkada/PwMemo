<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent"
	android:layout_width="fill_parent"
	android:padding="10dp"
	>
	<TextView 
		android:id="@+id/title_textview"
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="@string/title"
		/>
	<EditText
		android:hint="@string/title_is_not_encrypted"
		android:id="@+id/title_textedit"
		android:layout_alignParentLeft="true"
		android:layout_below="@id/title_textview"
		android:layout_height="wrap_content"
		android:layout_marginBottom="3dp"
		android:layout_width="fill_parent"
		/>
	<TextView 
		android:id="@+id/user_id_textview"
		android:layout_alignParentLeft="true"
		android:layout_below="@id/title_textedit"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="@string/user_id"
		/>
	<EditText
		android:id="@+id/user_id_edittext"
		android:layout_alignParentLeft="true"
		android:layout_below="@id/user_id_textview"
		android:layout_height="wrap_content"
		android:layout_marginBottom="3dp"
		android:layout_width="fill_parent"
		/>
	<TextView 
		android:id="@+id/password_textview"
		android:layout_alignParentLeft="true"
		android:layout_below="@id/user_id_edittext"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="@string/password"
		/>
	<com.toycode.idpw.CopyablePasswordEditText
		android:id="@+id/password_edittext"
		android:layout_alignParentLeft="true"
		android:layout_below="@id/password_textview"
		android:layout_height="wrap_content"
		android:layout_marginBottom="3dp"
		android:layout_width="fill_parent"
		/>
	<TextView 
		android:id="@+id/memo_textview"
		android:layout_alignParentLeft="true"
		android:layout_below="@id/password_edittext"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="@string/memo"
		/>
	<Button
		android:id="@+id/cancel_button"
		android:layout_alignParentBottom="true"
		android:layout_alignParentLeft="true"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="@string/cancel"
		/>
	<Button
		android:id="@+id/add_update_button"
		android:layout_alignParentBottom="true"
		android:layout_alignParentRight="true"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="@string/add_update"
		/>
	<EditText
		android:id="@+id/memo_edittext"
		android:layout_above="@id/cancel_button"
		android:layout_alignParentLeft="true"
		android:layout_below="@id/memo_textview"
		android:layout_height="wrap_content"
		android:layout_marginBottom="3dp"
		android:layout_width="fill_parent"
		/>
</RelativeLayout>
